<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/projects/edit/{{project.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Titulo"
                                value="{{project.title}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="supervisor" placeholder="Responsable"
                                value="{{project.supervisor}}" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="partners" rows="2" class="form-control"
                                placeholder="Colaboradores">{{project.partners}}</textarea>
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="5" class="form-control"
                                placeholder="Descripcion">{{project.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <select class="custom-select" name="estatus">
                                    {{#when project.estatus 'eq' '1'}}
                                    <option value="{{project.estatus}}" selected>Activo</option>
                                    {{/when}}
                                    {{#when estatus 'eq' '2'}}
                                    <option value="{{project.estatus}}" selected>En espera</option>
                                    {{/when}}
                                    {{#when estatus 'eq' '3'}}
                                    <option value="{{project.estatus}}" selected>Finalizado</option>
                                    {{/when}}
                                    {{#when estatus 'eq' '0'}}
                                    <option value="{{project.estatus}}" selected>Eliminado</option>
                                    {{/when}}                                    
                                    <option value="1">Activo</option>
                                    <option value="2">En espera</option>
                                    <option value="3">Finalizado</option>
                                    <option value="0">Eliminado</option>
                                </select>
                            </div>
                            <button class="btn btn-success btn-block">
                                Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>