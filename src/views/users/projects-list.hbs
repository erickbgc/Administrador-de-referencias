<div class="container p-4">
    <div class="row">

        {{#each projects}}
            <div class="col-md-4 mt-3">
                <div class="card text-center">
                    <div class="card-body">                    
                        <i class="fas fa-folder-open float-left"></i>
                        <a href="/users/{{noBlanks title}}/{{id}}/links">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>                            
                        </a>   
                        {{#when estatus 'eq' '1'}}
                        <h5>
                            <span class="badge badge-primary badge-pill">Activo</span>                    
                        </h5>
                        {{/when}}                                                
                        {{#when estatus 'eq' '2'}}
                        <h5>
                            <span class="badge badge-info badge-pill">Espera</span>
                        </h5>                    
                        {{/when}}                                                
                        {{#when estatus 'eq' '3'}}
                        <h5>
                            <span class="badge badge-success badge-pill">Finalizado</span>
                        </h5>                    
                        {{/when}}                                                
                        {{#when estatus 'eq' '0'}}
                        <h5>
                            <span class="badge badge-dark badge-pill">Eliminado</span>        
                        </h5>            
                        {{/when}}
                        <p class="m-2">Supervisor: {{supervisor}}</p>
                        <p class="m-2">Colaboradores: {{partners}}</p>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>Sin proyectos.</p>
                </div>
            </div>
        {{/each}}


    </div>
</div>