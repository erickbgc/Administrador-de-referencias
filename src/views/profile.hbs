<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <h3>Bienvenido {{user.fullname}}</h3>
                    <h4>Usuario: {{user.username}}</h4>
                    {{#when user.username 'eq' 'admin'}}
                    <a href="/users" class="btn btn-primary m-4">
                        Ver usuarios
                    </a>
                    {{else}}
                    <a href="/projects" class="btn btn-primary m-4">
                        Ver proyectos
                    </a>
                    {{/when}}
                </div>
            </div>
        </div>
    </div>
</div>